<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:o="http://myfaces.apache.org/orchestra"
      xmlns:c="http://java.sun.com/jstl/core">
<head>
	<script type="text/javascript" src="#{facesContext.externalContext.requestContextPath}/public/javascript/jquery/jquery-1.3.2.js"></script>	
	<script type="text/javascript" src="#{facesContext.externalContext.requestContextPath}/public/javascript/jquery/jquery-ui-1.7.custom.min.js"></script>

	<script type="text/javascript">
	  var $j = jQuery.noConflict();
	</script>  

</head>

<body>

<div>

<h:form prependId="false">
<h:inputHidden id="item" value="#{internalItemLendTooltipController.itemId}" />


<table> 
	<tr>
		<th>
			<h:outputText value="#{messages.item_lendTo}:" /> *
		</th>
		<td>
			<h:selectOneMenu id="borrowerInput" value="#{internalItemLendTooltipController.borrowerId}" converter="javax.faces.Long" required="true">
				<f:selectItems value="#{internalItemLendTooltipController.borrowerSelectItems}"/>
			</h:selectOneMenu>
		</td>
	</tr>
	<tr>
		<th>
			<h:outputText value="#{messages.item_lendSince}:" /> *
		</th>
		<td>
			<h:inputText id="borrowDateInput" value="#{internalItemLendTooltipController.borrowDate}" styleClass="datepicker"/>
		</td>
	</tr>
	<tr>
		<td colspan="2" style="text-align: center;">
			<input type="button" onclick="submitLendItem(this, 'borrowerInput')" value="#{messages.item_lendSubmit}"/>
		</td>
	</tr>
</table>

</h:form>

</div>
</body>

<script type="text/javascript">
	$j(".datepicker").datepicker();
</script>
</html>