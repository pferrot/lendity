<ui:composition template="/WEB-INF/jsp/inc-templates/main-template.jspx"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:o="http://myfaces.apache.org/orchestra"
	xmlns:c="http://java.sun.com/jstl/core"
	xmlns:t="http://myfaces.apache.org/tomahawk">

	<!-- params for page titles-->
	<ui:param name="pageTitle" value="#{messages.item_internalItemEditTitle}" />
	<ui:param name="contentHeader" value="#{messages.item_internalItemEditTitle}" />

		<ui:define name="content">

		<ui:decorate template="/WEB-INF/jsp/inc-templates/content-template.jspx">

			<!-- header content here  -->
<!--			<ui:define name="pageName">#{contentHeader}</ui:define>-->

			<!-- insert content here -->
			<ui:define name="pageContent">
			
			<!-- body -->
			<div class="gt-bd gt-cols clearfix">
			
			<!-- main content -->
			<div class="gt-content">
				
				<!-- Item Edit Form -->
				<h2 class="gt-form-head"><h:outputText value="#{messages.item_internalItemEditTitle}"/></h2>
				<div class="gt-form gt-content-box">
				
				<f:view>

					<h:form id="internalItemEditForm" enctype="multipart/form-data">


					<!-- form row -->
					<div class="gt-form-row gt-width-100">
						<label><h:outputText value="#{messages.item_title}"/> *</label>
						<h:message styleClass="error" showSummary="true" showDetail="false"
							for="title"></h:message>			
						<h:inputText id="title" styleClass="gt-form-text"
							value="#{internalItemEditController.title}" 
							required="true" 
							requiredMessage="#{messages.validation_requiredMessage}"
							maxlength="255"/>			
					</div><!-- /form row -->	
					
					<c:if test="#{not internalItemEditController.descriptionAvailable}">
						<span id="addDescription" class="linkStyleActionSmall" onClick="toggleVisibility('description'); toggleVisibility('addDescription');"><h:outputText value="#{messages.item_addDescription}"/><br/><br/></span>
						<div id="description" style="display: none;">
							<!-- form row -->
							<div class="gt-form-row gt-width-100">
								<label><h:outputText value="#{messages.item_description}"/></label>
								<h:message styleClass="error" showSummary="true" showDetail="false"
									for="description"></h:message>			
								<h:inputTextarea id="description" 
								    styleClass="gt-form-textarea"
								    rows="10"
									value="#{internalItemEditController.description}" 
									maxlength="1333"
									validator="#{internalItemEditController.validateDescriptionSize}"/>			
							</div><!-- /form row -->
						</div>				
					</c:if>

					<c:if test="#{internalItemEditController.descriptionAvailable}">
						<!-- form row -->
						<div class="gt-form-row gt-width-100">
							<label><h:outputText value="#{messages.item_description}"/></label>
							<h:message styleClass="error" showSummary="true" showDetail="false"
								for="description"></h:message>			
							<h:inputTextarea id="description" 
							    styleClass="gt-form-textarea"
							    rows="10"
								value="#{internalItemEditController.description}" 
								maxlength="1333"
								validator="#{internalItemEditController.validateDescriptionSize}"/>			
						</div><!-- /form row -->
					</c:if>
					
					<!-- form row -->
					<div class="gt-form-row gt-width-100">
						<label><h:outputText value="#{messages.item_category}"/> *</label>
						<h:message styleClass="error" showSummary="true" showDetail="false"
							for="category"></h:message>
						<h:selectOneMenu id="category" 
						    value="#{internalItemEditController.categoryId}" 
						    converter="javax.faces.Long" 
						    required="true"
						    requiredMessage="#{messages.validation_requiredMessage}">
							<f:selectItems value="#{internalItemEditController.categoriesSelectItems}"/>
						</h:selectOneMenu>					
					</div><!-- /form row -->
					
					<!-- form row -->
					<div class="gt-form-row gt-width-100">
						<label><h:outputText value="#{messages.item_visibility}"/></label>
						<h:message styleClass="error" showSummary="true" showDetail="false"
							for="visible"></h:message>
						<h:selectBooleanCheckbox id="visible" value="#{internalItemEditController.visible}" styleClass="gt-form-element-checkbox"/>
						<h:outputText value=" " escape="false" />
						<h:outputText value="#{messages.item_visibilityConnectionsCanSee}"/>
					</div><!-- /form row -->					
					
					<!-- form row -->
					<div class="gt-form-row">
						<br/>
						<table class="buttonsTable"><tr><td>
						<h:commandButton styleClass="stylishButton" value="#{messages.navigation_save}" action="#{internalItemEditController.submit}" />
						</td><td>
						<h:outputLink styleClass="stylishButton"  value="#{internalItemEditController.itemOverviewHref}">
           					<h:outputText value="#{messages.navigation_cancel}"/>
         				</h:outputLink>
         				</td></tr></table>
					</div>
					<!-- /form row -->
					
					</h:form>
				</f:view>		
				</div>			
				<!-- /Item Edit Form -->
				
			</div>
			<!-- /main content -->

			<!-- sidebar -->
			<div class="gt-sidebar">
				
			</div>
			<!-- / sidebar -->

		</div>
		<!-- /body -->
			
			</ui:define>
		</ui:decorate>

	</ui:define>
</ui:composition>

