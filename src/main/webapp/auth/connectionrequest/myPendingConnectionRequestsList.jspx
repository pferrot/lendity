<ui:composition template="/WEB-INF/jsp/inc-templates/main-template.jspx"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
    xmlns:c="http://java.sun.com/jstl/core"
    xmlns:o="http://myfaces.apache.org/orchestra"
    xmlns:t="http://myfaces.apache.org/tomahawk">

	<!-- params for page titles-->
	<ui:param name="pageTitle" value="#{messages.connectionRequest_myPendingConnectionRequestsTitle}" />
	<ui:param name="contentHeader" value="#{messages.connectionRequest_myPendingConnectionRequestsTitle}" />

	<ui:define name="content">

		<ui:decorate template="/WEB-INF/jsp/inc-templates/content-template.jspx">

			<!-- header content here  -->
<!--			<ui:define name="pageName">#{contentHeader}</ui:define>-->

			<!-- insert content here -->
			<ui:define name="pageContent">
			
			<!-- body -->
			<div class="gt-bd gt-cols clearfix">
			<!-- main content -->
			<div class="gt-content">

				
<f:view>

<h2 class="gt-table-head"><h:outputText value="#{messages.connectionRequest_myPendingConnectionRequestsTitle}"/></h2>
<p><h:outputText value="#{messages.connectionRequest_onlyThoseWithNoResponse}"/></p>

<br/>


<!-- content box -->
<div class="gt-content-box">

<c:if test="#{empty(myPendingConnectionRequestsListController.list)}">
	<br/><br/>
	<center>
	<h4><h:outputText value="#{messages.connectionRequest_noPendingConnectionRequest}"></h:outputText></h4>
	</center>
	<br/>
</c:if>

<ui:include src="acceptConnectionTooltip.jspx"/>
<ui:include src="refuseConnectionTooltip.jspx"/>
<ui:include src="banConnectionTooltip.jspx"/>

<c:if test="#{not empty(myPendingConnectionRequestsListController.list)}">
<h:dataTable value="#{myPendingConnectionRequestsListController.list}" binding="#{myPendingConnectionRequestsListController.table}" var="connectionRequest" styleClass="gt-table gt-user-table">

    <h:column id="column1">
    	<table class="thumbnailOutterTable"><tr><td class="thumbnailOutterTd">
			<table class="thumbnailInnerTable"><tr><td>
				<h:outputLink value="#{myPendingConnectionRequestsListController.requesterOverviewHref}">
					<div class="thumbnailDiv">
						<img src="#{myPendingConnectionRequestsListController.requesterThumbnailSrc}"/>
					</div>
				</h:outputLink>
			</td></tr></table>
		</td><td>
		<h4>
			<h:outputLink value="#{myPendingConnectionRequestsListController.requesterOverviewHref}">
				<h:outputText value="#{connectionRequest.requester.displayName}" />
			</h:outputLink>
		</h4>
		</td></tr></table>
    </h:column>

	<h:column id="column2">
		<table border="0" class="gt-table-categories" width="150" align="right">
			<tr>
			    <th width="50%"><nobr><h:outputText id="id_1" value="#{messages.connectionRequest_requestDate}:" /></nobr></th>
				<td width="50%"><nobr><h:outputText id="id_2" value="#{myPendingConnectionRequestsListController.requestDateLabel}"/></nobr></td>
		    </tr>
		</table>
    </h:column>

	<h:column id="column3">
	<h:form>
		<table border="0" class="gt-table-categories" width="150" align="right">
			<tr>
				<td>
					<span onclick="acceptConnectionTooltip(this, '#{connectionRequest.id}', 1)">
						<h:outputText styleClass="stylishButton" value="#{messages.connectionRequest_responseAccept}"/>
					</span>
				</td>
		    </tr>
		    <tr>
				<td>
					<span onclick="refuseConnectionTooltip(this, '#{connectionRequest.id}', 1)">
						<h:outputText styleClass="stylishButton" value="#{messages.connectionRequest_responseRefuse}"/>
					</span>
				</td>
		    </tr>
		    <tr>
				<td>
					<span onclick="banConnectionTooltip(this, '#{connectionRequest.id}', 1)">
						<h:outputText styleClass="stylishButton" value="#{messages.connectionRequest_responseBan}"/>
					</span>
				</td>
		    </tr>
		</table>
	</h:form>
    </h:column>

</h:dataTable>
</c:if>

</div><!-- /content box -->

</f:view>
			</div>
			<!-- /main content -->
			</div>
			<!-- /body -->
			
			</ui:define>
		</ui:decorate>

	</ui:define>
</ui:composition>

