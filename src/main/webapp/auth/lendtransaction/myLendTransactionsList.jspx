<ui:composition template="/WEB-INF/jsp/inc-templates/main-template.jspx"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
    xmlns:c="http://java.sun.com/jstl/core"
    xmlns:o="http://myfaces.apache.org/orchestra"
    xmlns:t="http://myfaces.apache.org/tomahawk">

	<!-- params for page titles-->
	<ui:define name="pageTitle">
		<h:outputText value="#{messages.lendTransaction_myLendTransactionsTitle}"/>
	</ui:define>
	<ui:param name="contentHeader" value="#{messages.lendTransaction_myLendTransactionsTitle}" />

	<ui:define name="content">

		<ui:decorate template="/WEB-INF/jsp/inc-templates/content-template.jspx">

			<!-- header content here  -->
<!--			<ui:define name="pageName">#{contentHeader}</ui:define>-->

			<!-- insert content here -->
			<ui:define name="pageContent">
			
			<!-- body -->
			<div class="gt-bd gt-cols clearfix">

				
<f:view>

<h2 class="gt-table-head">
	<h:outputText value="#{messages.lendTransaction_myLendTransactionsTitle}"/>
</h2>

<br/>


<table class="filtersTable">
<tr>
<td>
<ui:include src="filter/statusFilter.jspx">
	<ui:param name="theBean" value="#{myLendTransactionsListController}"/>
</ui:include>
</td>
</tr>
</table>

<br/>

<!-- content box -->
<div class="gt-content-box">

<c:if test="#{empty(myLendTransactionsListController.list)}">
	<br/><br/>
	<center>
	<h4><h:outputText value="#{messages.search_noResult}"></h:outputText></h4>
	</center>
	<br/>
</c:if>

<h:dataTable value="#{myLendTransactionsListController.list}" binding="#{myLendTransactionsListController.table}" var="lendTransaction" styleClass="gt-table gt-user-table">

    <h:column id="column1">
    	<table class="thumbnailOutterTable"><tr><td class="thumbnailOutterTd">
			<table class="thumbnailInnerTable"><tr><td>
				<div class="thumbnailDiv">
				    <img src="#{myLendTransactionsListController.thumbnail1Src}"/>
				</div>
			</td></tr></table>
		</td><td>
		<span class="fontSizeSmall"><h:outputText value="#{messages.lendTransaction_transactionFor}"/></span>
		<h4>
			<h:outputText value="#{lendTransaction.title}" />		
		</h4>
		</td></tr></table>
    </h:column>

	<h:column id="column2">
		<table border="0" class="gt-table-categories" width="250" align="right">
			<tr>
				<th width="50%">
					<h:outputText id="itemTitle" value="#{messages.item_item}:" />
				</th>
				<td width="50%">
					<h:outputLink id="itemLink" value="#{myLendTransactionsListController.itemOverviewHref}" rendered="#{myLendTransactionsListController.itemAvailable}">
						<h:outputText id="itemLabel" value="#{lendTransaction.item.title}"  rendered="#{myLendTransactionsListController.itemAvailable}"/>
					</h:outputLink>
					<i><h:outputText id="itemLabel2" value="#{messages.lendTransaction_itemDeleted}"  rendered="#{not myLendTransactionsListController.itemAvailable}"/></i>
				</td>
			</tr>
			<tr>
				<th>
					<h:outputText id="lenderTitle" value="#{messages.item_owner}:" />
				</th>
				<td>
					<h:outputLink id="lenderLink" value="#{myLendTransactionsListController.lenderOverviewHref}">
						<h:outputText id="lenderLabel" value="#{lendTransaction.lender.displayName}"/>
					</h:outputLink>
				</td>
			</tr>   
			<tr>
				<th>
					<h:outputText id="borrowerTitle" value="#{messages.lendTransaction_requester}:" />
				</th>
				<td>
					<h:outputLink id="borrowerLink" value="#{myLendTransactionsListController.borrowerOverviewHref}" rendered="#{myLendTransactionsListController.borrowerHrefAvailable}">
						<h:outputText id="borrowerLabel" value="#{lendTransaction.borrower.displayName}" rendered="#{myLendTransactionsListController.borrowerHrefAvailable}"/>
					</h:outputLink>
					<h:outputText id="borrowerLabel2" value="#{lendTransaction.borrowerName}" rendered="#{not myLendTransactionsListController.borrowerHrefAvailable}"/>
				</td>
			</tr>
			<tr>
				<th>
					<h:outputText id="statusTitle" value="#{messages.lendTransaction_status}:" />
				</th>
				<td>
					<h:outputText id="statusLabel" value="#{myLendTransactionsListController.statusLabel}"/>
				</td>
			</tr>
			<tr>
				<th>
					<h:outputText id="creationDateTitle" value="#{messages.lendTransaction_creationDate}:" />
				</th>
				<td>
					<h:outputText id="creationDateLabel" value="#{myLendTransactionsListController.creationDateLabel}"/>
				</td>
			</tr>
		</table>
    </h:column>
    
    <h:column id="column3">
		<table border="0" class="gt-table-categories" width="120" align="right">
			<tr>
				<td>
					<h:outputLink id="accessTransactionLink" value="#{myLendTransactionsListController.lendTransactionOverviewHref}" styleClass="stylishButton">
						<h:outputText id="accessTransactionLinkLabel" value="#{messages.lendTransaction_accessTransaction}"/>
					</h:outputLink>				
				</td>
		    </tr>
		</table>
    </h:column>

</h:dataTable>

<ui:include src="../table/tableControls.jspx">
	<ui:param name="theBean" value="#{myLendTransactionsListController}"/>
</ui:include>

</div><!-- /content box -->

</f:view>
			</div>
			<!-- /body -->
			
			</ui:define>
		</ui:decorate>

	</ui:define>
</ui:composition>

