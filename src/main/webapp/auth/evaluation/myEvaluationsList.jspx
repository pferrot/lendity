<ui:composition template="/WEB-INF/jsp/inc-templates/main-template.jspx"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
    xmlns:c="http://java.sun.com/jstl/core"
    xmlns:o="http://myfaces.apache.org/orchestra"
    xmlns:t="http://myfaces.apache.org/tomahawk">

	<!-- params for page titles-->
	<ui:define name="pageTitle"><h:outputText value="#{messages.evaluation_myEvaluationsTitle}" /></ui:define>
	<ui:param name="contentHeader" value="#{messages.evaluation_myEvaluationsTitle}" />

	<ui:define name="content">

		<ui:decorate template="/WEB-INF/jsp/inc-templates/content-template.jspx">

			<!-- header content here  -->
<!--			<ui:define name="pageName">#{contentHeader}</ui:define>-->

			<!-- insert content here -->
			<ui:define name="pageContent">
			
			<!-- body -->
			<div class="gt-bd gt-cols clearfix">
			<!-- main content -->
			<div class="gt-content">

				
<f:view>

<h2 class="gt-table-head"><h:outputText value="#{messages.evaluation_myEvaluationsTitle}"/></h2>

<br/>


<!-- content box -->
<div class="gt-content-box">

<c:if test="#{empty(myEvaluationsListController.list)}">
	<br/><br/>
	<center>
	<h4><h:outputText value="#{messages.search_noResult}"></h:outputText></h4>
	</center>
	<br/>
</c:if>

<h:dataTable value="#{myEvaluationsListController.list}" binding="#{myEvaluationsListController.table}" var="evaluation" styleClass="gt-table gt-user-table">

    <h:column id="column1">
    	<table><tr><td>
		<h4>
			<h:outputLink id="link2" value="#{myEvaluationsListController.evaluationOverviewHref}">
				<h:outputText value="#{evaluation.evaluator.displayName}" />
			</h:outputLink>			
		</h4>
		</td></tr></table>
    </h:column>

	<h:column id="column2">
		<table border="0" class="gt-table-categories" width="250" align="right">
			<tr>
				<th width="50%">
					<h:outputText id="evalScoreLabel" value="#{messages.evaluation_score}:" />
				</th>
				<td width="50%">
					<h:outputText id="evalScore" value="#{myEvaluationsListController.evaluationLabel}" />
				</td>
			</tr>		    
		</table>
    </h:column>

</h:dataTable>


<ui:include src="../table/tableControls.jspx">
	<ui:param name="theBean" value="#{myEvaluationsListController}"/>
</ui:include>

</div><!-- /content box -->

</f:view>
			</div>
			<!-- /main content -->
			</div>
			<!-- /body -->
			
			</ui:define>
		</ui:decorate>

	</ui:define>
</ui:composition>

