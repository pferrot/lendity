<ui:composition template="/WEB-INF/jsp/inc-templates/main-template.jspx"
	xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ice="http://www.icesoft.com/icefaces/component"
    xmlns:c="http://java.sun.com/jstl/core_rt"
	xmlns:o="http://myfaces.apache.org/orchestra">

	<!-- params for page titles-->
	<ui:param name="pageTitle" value="Movies List" />
	<ui:param name="contentHeader" value="Movies List" />

	<ui:define name="content">

		<ui:decorate template="/WEB-INF/jsp/inc-templates/content-template.jspx">

			<!-- header content here  -->
			<ui:define name="pageName">
            	#{contentHeader}
          	</ui:define>

			<!-- insert content here -->
			<ui:define name="pageContent">
<!-- 				<ui:include src="/WEB-INF/inc-content/component-content.jspx" /> -->
				<f:view>
					<center>

<ice:form>
	<ice:inputText id="movieSearchString" value="#{moviesListController.movieSearchString}"/>
	<br/>
	<ice:commandButton value="#{messages.search}" action="#{moviesListController.searchByTitle}" />
	<ice:commandButton value="#{messages.clearSearch}" action="#{moviesListController.clearSearchByTitle}" />
</ice:form>
<br/>

<ice:dataTable value="#{moviesListController.moviesList}" binding="#{moviesListController.moviesTable}" var="movie">

	<ice:column>
        <f:facet name="header">
            <ice:outputText value="ID" />
        </f:facet>
        <ice:outputText value="#{movie.id}" />
    </ice:column>

	<ice:column>
        <f:facet name="header">
            <ice:outputText value="TITLE" />
        </f:facet>
		<o:separateConversationContext>
        	<ice:outputLink value="#{moviesListController.movieOverviewHref}">
            	<ice:outputText value="#{movie.title}" />
        	</ice:outputLink>
		</o:separateConversationContext>
    </ice:column>

	<ice:column>
        <f:facet name="header">
            <ice:outputText value="TOTAL NB COPIES" />
        </f:facet>
		<ice:outputText value="#{moviesListController.nbInstances}" />
    </ice:column>

	<ice:column>
        <f:facet name="header">
            <ice:outputText value="AVAILABLE NB COPIES" />
        </f:facet>
		<ice:outputText value="#{moviesListController.nbAvailableInstances}" />
    </ice:column>

</ice:dataTable>

<br/>

<ice:form>
    <ice:commandLink rendered="#{moviesListController.previousPage}" value="#{messages.previousPage}" action="#{moviesListController.previousPage}"/>
    <ice:commandLink rendered="#{moviesListController.nextPage}" value="#{messages.nextPage}" action="#{moviesListController.nextPage}"/>
</ice:form>

					</center>
				</f:view>
			</ui:define>
		</ui:decorate>

	</ui:define>
</ui:composition>

