<faces-config>
	<!-- 
	Make it possible to access spring beans.
	 -->
	<application>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver 
		</variable-resolver>
	</application>
	
	<managed-bean>
		<managed-bean-name>registrationBean</managed-bean-name>
		<managed-bean-class>
			com.pferrot.sharedcalendar.register.jsf.RegistrationBean 
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/register.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/WEB-INF/jsp/results/result.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
