	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<bean id="loanCalcCo" class="com.pferrot.loancalc.controllers.LoanCalcController">
<!--		<property name="firstTableDao">-->
<!--			<ref bean="firstTableDao"/>-->
<!--		</property>-->
		<property name="formView" value="secure/loanCalc" />
		<property name="successView" value="secure/loanCalcResult" />
		<property name="commandName" value="loanInfo" />
		<property name="commandClass" value="com.pferrot.loancalc.beans.LoanInfo" />
		<property name="validator">
			<bean class="com.pferrot.loancalc.validators.LoanCalcValidator" />
		</property>
	</bean>
</beans>