<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:o="http://myfaces.apache.org/orchestra"
      xmlns:c="http://java.sun.com/jstl/core">


<f:loadBundle basename="messages" var="messages"/>
<head>
    <!-- page title param passed in by param -->
    <title>#{messages.mainTitle}</title>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta http-equiv="Expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
	<meta http-equiv="Pragma" content="no-cache" />
	<link rel="stylesheet" href="#{facesContext.externalContext.requestContextPath}/public/css/reset-fonts.css" type="text/css" media="screen, projection" />
	<link rel="stylesheet" href="#{facesContext.externalContext.requestContextPath}/public/css/gt-styles.css" type="text/css" media="screen, projection" />
	<link rel="stylesheet" href="#{facesContext.externalContext.requestContextPath}/public/css/gt-fixed.css" type="text/css" media="screen, projection" />
	<link rel="stylesheet" href="#{facesContext.externalContext.requestContextPath}/public/css/override.css" type="text/css" media="screen, projection" />
	<link rel="stylesheet" href="#{facesContext.externalContext.requestContextPath}/public/css/custom.css" type="text/css" media="screen, projection" />
	<script type="text/javascript" src="#{facesContext.externalContext.requestContextPath}/public/javascript/jquery/jquery-1.3.2.js"></script>
	<script type="text/javascript" src="#{facesContext.externalContext.requestContextPath}/public/javascript/jquery/jquery-ui-1.7.custom.min.js"></script>
	
	<script type="text/javascript">
	  var $j = jQuery.noConflict();
	</script>  

	<script type="text/javascript">
	  $j(document).ready(function() {
	    $j("span.error").next().css('background-color', '#f8b6a1');        
	  });
	</script>    

<!-- 	
  <script type="text/javascript">
    $j(document).ready(function() {
        $j(":text:first").focus();
    });  
  </script>
 -->	
	
</head>
<body class="gt-fixed">


		<!-- head -->
		<div class="gt-hd clearfix">
			<!-- leaf watermark -->
			<div class="gt-leaf-watermark clearfix">
			
			<!-- head top -->
			<div class="gt-hd-top clearfix">
			
				<div class="gt-fixed-wrap clearfix">
			
				<!-- logo -->
				<div class="gt-logo">
					pf.com<img class="gt-leaf" src="#{facesContext.externalContext.requestContextPath}/public/images/gt/leaf-logo-icon.png" alt="leaf-logo-icon" width="49" height="44"/>
				</div>
				<!-- / logo -->
				
				
				<!-- utility box -->
				<div class="gt-util-box">
					<div class="gt-util-box-inner">
						<c:if test="#{authenticationController.loggedIn}" var="loggedInUser"/>
						<c:if test="${loggedInUser}">
							<p><strong><h:outputText value="#{authenticationController.currentUserDisplayName}"/></strong></p>
							<p>					
								<o:separateConversationContext>
	                        		<h:outputLink value="#{authenticationController.logoutURL}">
		            					<h:outputText value="#{messages.logout}"/>
					         		</h:outputLink>
		        		 		</o:separateConversationContext>
		         			</p>
		         			<p>					
								<o:separateConversationContext>
	                        		<h:outputLink value="#{authenticationController.myProfileURL}">
		            					<h:outputText value="#{messages.my_profile}"/>
					         		</h:outputLink>
		        		 		</o:separateConversationContext>
		         			</p>
	         			</c:if>
	         			<c:if test="${not (loggedInUser)}">
		         			<p>
		         				<o:separateConversationContext>
	                        		<h:outputLink value="#{authenticationController.loginURL}">
	                        			<h:outputText value="#{messages.login_2}"/>
	                        		</h:outputLink>
	                       		 </o:separateConversationContext>
	                        </p>
	         			</c:if>
					</div>
				</div>
				<!-- / utility box -->
				
				</div>
			
			</div><!-- /head top -->
			
			<!-- navbar -->
			<div class="gt-navbar clearfix">
			
				<div class="gt-fixed-wrap clearfix">
				
				<!-- navigation -->
				<div class="gt-nav">
					<ul>
						<li>
							<o:separateConversationContext>
		                        <h:outputLink value="#{authenticationController.homeURL}">
		                        	<h:outputText value="#{messages.navigation_home}"/>
		                        </h:outputLink>
                   			</o:separateConversationContext>
						</li>
						<c:if test="${loggedInUser}">
							<li>
								<o:separateConversationContext>
			                        <h:outputLink value="#{authenticationController.myItemsURL}">
			                        	<h:outputText value="#{messages.navigation_items}"/>
			                        </h:outputLink>
	                   			</o:separateConversationContext>
							</li>
						</c:if>
						<c:if test="${loggedInUser}">
							<li>
								<o:separateConversationContext>
			                        <h:outputLink value="#{authenticationController.myConnectionsURL}">
			                        	<h:outputText value="#{messages.navigation_connections}"/>
			                        </h:outputLink>
	                   			</o:separateConversationContext>
							</li>
						</c:if>	
						<!-- 
						<li><a class="gt-active" href="base.html">Base HTML</a></li>
						 -->
					</ul>
				</div><!-- / navigation -->
				
				<!-- search -->
				<c:if test="${loggedInUser}">
					<div class="gt-search"><div class="gt-search-inner">
						<input type="text" class="gt-search-text" value="#{messages.navigation_items}" onfocus="javascript:if(this.value=='Search')this.value='';" onblur="javascript:if(this.value=='')this.value='Search';" />
					</div></div>
				</c:if>
				
				</div>
				
			</div><!-- /navbar -->			
		</div><!-- /leaf watermark -->
		</div>
		<!-- / head -->
  		
  		<ui:insert name="content">Default Content</ui:insert>



		<!-- footer -->
		<div class="gt-footer"><div class="gt-footer-inner">
			<p>&#169; 2010 pf</p>
		</div></div>
		<!-- /footer -->
</body>
</html>
